<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ToDoList.ViewModel"
             xmlns:cv="clr-namespace:ToDoList.ContetnView"
             x:Class="ToDoList.MainPage">


    <Grid RowDefinitions="0.3*, *">
        <ScrollView>
            <CollectionView ItemsSource="{Binding TasksCollection}" Grid.Row="1" BackgroundColor="Red">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <cv:TaskView LabelText="Hey" BackgroundColor="Aqua"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>

</ContentPage>
